<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:layout_gravity="center">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg"
        android:scaleType="centerCrop"
        android:alpha="0.9"/>

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- White Square for both Email and Password Fields -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#ffffff"
            android:alpha="0.8">

            <!-- LinearLayout to hold both email and password input fields -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textSize="30sp"
                    android:textColor="@color/darkBlue2"
                    android:fontFamily="@font/coopbl"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <!-- Email Input Field -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#49495f"
                    android:background="@drawable/input_border"
                    android:textColor="@color/darkBlue2"
                    android:padding="7dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/baseline_email_24"/>

                <!-- Password Input Field -->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#49495f"
                    android:background="@drawable/input_border"
                    android:textColor="@color/darkBlue2"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/baseline_key_24"/>

                <!-- Login Button -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#00002e"
                    android:text="Login"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Signup Redirect Button -->
                <Button
                    android:id="@+id/signupButton"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#00002e"
                    android:text="Go to Signup"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>