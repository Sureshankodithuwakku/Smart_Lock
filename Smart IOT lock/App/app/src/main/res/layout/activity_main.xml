<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:alpha="0.7" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#BF28282B"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text=" Welcome to Smart Lock !"
        android:textSize="32sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/secondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Your safety is our priority"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/welcomeText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="250dp"
        android:background="#BF28282B"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="10dp"
        android:text="Simplify your security with \nintelligent access"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <!-- Log In Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Log In"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="#28282B"
        android:layout_above="@id/signupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"/>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signupButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Sign Up"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="#28282B"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>


</RelativeLayout>
